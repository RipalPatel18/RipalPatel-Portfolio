---
import BaseLayout from "../layouts/BaseLayout.astro";
import { projects } from "../data/projects";

// Featured project for the big section
const featured = projects[0];
---

<BaseLayout title="Ripal | Home">

  <!-- HERO -->
  <section class="hero">
    <div class="container hero-center" data-reveal="up">
      <div class="hero-badge glass">
        <span class="badge-dot">new</span>
        <span>Open to Co-op / Internships</span>
      </div>

      <h1 class="hero-title">
        Developer <span class="hero-x">X</span> Designer
      </h1>

      <p class="hero-sub">
        Hi, I’m Ripal Patel — I design and build clean, modern web experiences.
      </p>

      <div class="hero-actions">
        <a class="btn btn-primary" href="#projects">View Work <span class="btn-icon">→</span></a>
        <a class="btn btn-ghost" href="mailto:yourname@email.com">
          ✉ yourname@email.com
        </a>
      </div>
    </div>
  </section>

  <!-- ABOUT -->
  <section id="about" class="section section-lg">
    <div class="container hero-center" data-reveal="up">
      <h2 class="section-title">About Me</h2>

      <p class="section-sub">
        I’m a Web Development student at Humber with strong experience in UI design
        and frontend development.
      </p>

      <p class="muted" style="max-width:760px; font-size:18px; line-height:1.9; margin:0;">
        I enjoy turning ideas into polished interfaces using HTML, CSS, JavaScript, React, and Astro.
        I focus on accessibility, performance, and simple design that feels great to use.
      </p>
    </div>
  </section>

  <!-- PROJECTS (Featured Case Study like screenshot) -->
  <section id="projects" class="section section-lg">
    <div class="container center" data-reveal="up">
      <div class="section-eyebrow">
        <span class="dot"></span>
        <span>FEATURED CASE STUDIES</span>
      </div>

      <h2 class="section-title">Projects</h2>
      <p class="section-sub">
        Clean case studies with real features, GitHub + Live links.
      </p>
    </div>

    <div class="container" data-reveal="up">
      <div class="featured">
        <!-- LEFT big card -->
        <a class="featured-card glass" href={`/projects/${featured.slug}`}>
          <div class="featured-card-top">
            <p class="featured-card-text">
              {featured.heroLine ?? featured.summary}
            </p>
            <span class="featured-arrow">→</span>
          </div>

          <div class="featured-media">
            <img
              src={featured.image}
              alt={`${featured.title} preview`}
              loading="lazy"
            />
          </div>
        </a>

        <!-- RIGHT details -->
        <div class="featured-info">
          <div class="featured-head">
            <span class="accent-line"></span>
            <div>
              <h3 class="featured-title">{featured.title}</h3>
              <p class="featured-type">{featured.type ?? "Case study"}</p>
            </div>
          </div>

          <p class="featured-desc">
            {featured.longSummary ?? featured.summary}
          </p>

          <ul class="featured-list">
            {(featured.highlights ?? []).slice(0, 6).map((x) => <li>{x}</li>)}
          </ul>

          <div class="featured-tech">
            {(featured.tech ?? []).slice(0, 7).map((t) => (
              <span class="tech-pill">{t}</span>
            ))}
          </div>

          <div class="featured-actions">
            <a class="btn btn-primary" href={`/projects/${featured.slug}`}>
              View Case Study <span class="btn-icon">→</span>
            </a>

            {featured.github && (
              <a class="btn btn-ghost" href={featured.github} target="_blank" rel="noreferrer">
                GitHub
              </a>
            )}

            {featured.live && (
              <a class="btn btn-ghost" href={featured.live} target="_blank" rel="noreferrer">
                Live Demo
              </a>
            )}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- SKILLS (icons + names) -->
  <section id="skills" class="section section-lg">
    <div class="container hero-center" data-reveal="up">
      <h2 class="section-title">Skills</h2>
      <p class="section-sub">My main tech stack and tools I work with.</p>

      <div class="skills-icons-grid glass" style="padding:18px; width:100%; max-width:980px;">
        <!-- Skill Item -->
        <div class="skill-icon-item">
          <span class="skill-ic" aria-hidden="true">
            <svg viewBox="0 0 24 24" width="22" height="22" fill="none">
              <path d="M4 6.5C4 5.12 5.12 4 6.5 4h11C18.88 4 20 5.12 20 6.5v11c0 1.38-1.12 2.5-2.5 2.5h-11C5.12 20 4 18.88 4 17.5v-11Z" stroke="currentColor" stroke-width="1.7"/>
              <path d="M7 8h10M7 12h6M7 16h8" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
            </svg>
          </span>
          <span class="skill-name">HTML</span>
        </div>

        <div class="skill-icon-item">
          <span class="skill-ic" aria-hidden="true">
            <svg viewBox="0 0 24 24" width="22" height="22" fill="none">
              <path d="M12 3l7 4v10l-7 4-7-4V7l7-4Z" stroke="currentColor" stroke-width="1.7"/>
              <path d="M12 7v14" stroke="currentColor" stroke-width="1.7" opacity=".8"/>
            </svg>
          </span>
          <span class="skill-name">CSS</span>
        </div>

        <div class="skill-icon-item">
          <span class="skill-ic" aria-hidden="true">
            <svg viewBox="0 0 24 24" width="22" height="22" fill="none">
              <path d="M7 8l-3 4 3 4M17 8l3 4-3 4" stroke="currentColor" stroke-width="1.7" stroke-linecap="round" stroke-linejoin="round"/>
              <path d="M10 19l4-14" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
            </svg>
          </span>
          <span class="skill-name">JavaScript</span>
        </div>

        <div class="skill-icon-item">
          <span class="skill-ic" aria-hidden="true">
            <svg viewBox="0 0 24 24" width="22" height="22" fill="none">
              <path d="M12 12m-2 0a2 2 0 1 0 4 0a2 2 0 1 0 -4 0" stroke="currentColor" stroke-width="1.7"/>
              <path d="M12 3c4 0 7 4 7 9s-3 9-7 9-7-4-7-9 3-9 7-9Z" stroke="currentColor" stroke-width="1.7" opacity=".7"/>
            </svg>
          </span>
          <span class="skill-name">React</span>
        </div>

        <div class="skill-icon-item">
          <span class="skill-ic" aria-hidden="true">
            <svg viewBox="0 0 24 24" width="22" height="22" fill="none">
              <path d="M12 3l8 4.5v9L12 21 4 16.5v-9L12 3Z" stroke="currentColor" stroke-width="1.7"/>
              <path d="M9 12h6" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
            </svg>
          </span>
          <span class="skill-name">Node.js</span>
        </div>

        <div class="skill-icon-item">
          <span class="skill-ic" aria-hidden="true">
            <svg viewBox="0 0 24 24" width="22" height="22" fill="none">
              <path d="M12 3c4.42 0 8 1.57 8 3.5S16.42 10 12 10 4 8.43 4 6.5 7.58 3 12 3Z" stroke="currentColor" stroke-width="1.7"/>
              <path d="M4 6.5V12c0 1.93 3.58 3.5 8 3.5s8-1.57 8-3.5V6.5" stroke="currentColor" stroke-width="1.7"/>
            </svg>
          </span>
          <span class="skill-name">MySQL</span>
        </div>

        <div class="skill-icon-item">
          <span class="skill-ic" aria-hidden="true">
            <svg viewBox="0 0 24 24" width="22" height="22" fill="none">
              <path d="M6 7h12M6 12h12M6 17h12" stroke="currentColor" stroke-width="1.7" stroke-linecap="round"/>
              <path d="M4 5.5C4 4.12 5.12 3 6.5 3h11C18.88 3 20 4.12 20 5.5v13c0 1.38-1.12 2.5-2.5 2.5h-11C5.12 21 4 19.88 4 18.5v-13Z" stroke="currentColor" stroke-width="1.7" opacity=".6"/>
            </svg>
          </span>
          <span class="skill-name">Git/GitHub</span>
        </div>
      </div>

      <p class="muted" style="max-width:760px; margin:18px 0 0; font-size:16px; line-height:1.8;">
        I also work with Astro, Tailwind, MongoDB, Figma, and deploy projects on Vercel.
      </p>
    </div>
  </section>

  <!-- CONTACT (pretty form) -->
  <section id="contact" class="section section-lg">
    <div class="container hero-center" data-reveal="up">
      <h2 class="section-title">Contact Me</h2>
      <p class="section-sub">
        Want to work together or discuss an opportunity? Send a message and I’ll reply soon.
      </p>

      <form class="contact-card glass" style="width:100%; max-width:820px;" method="post" action="#">
        <div class="contact-grid">
          <label class="field">
            <span class="label">Full name</span>
            <input class="input" name="name" required placeholder="Ripal Patel" />
          </label>

          <label class="field">
            <span class="label">Email</span>
            <input class="input" type="email" name="email" required placeholder="you@example.com" />
          </label>

          <label class="field field-full">
            <span class="label">Message</span>
            <textarea class="input" name="message" rows="5" required placeholder="Write your message here..."></textarea>
          </label>
        </div>

        <div class="contact-actions">
          <button class="btn btn-primary" type="submit">
            Send Message <span class="btn-icon">→</span>
          </button>

          <a class="btn btn-ghost" href="mailto:yourname@email.com">
            Email Instead
          </a>
        </div>

        <div class="contact-note">
          <span class="mini-dot" aria-hidden="true"></span>
          <span>Usually replies within 24 hours.</span>
        </div>
      </form>
    </div>
  </section>
  </BaseLayout>