---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Ripal | About">
  <section class="section section-lg">
    <div class="container two-col" data-reveal>
      <div>
        <h2 class="section-title">About Me</h2>
        <p class="section-sub">
          I’m Ripal, a Web Development student who enjoys building modern, responsive websites with
          clean UI, accessibility, and smooth animations.
        </p>
        <div class="about-actions">
          <a class="btn" href="/contact">Connect with me</a>
          <a class="btn ghost" href="/projects">See my projects</a>
        </div>
      </div>

      <div class="card glass" data-tilt>
        <h3 style="margin:0 0 8px">Quick Info</h3>
        <p style="margin:0;color:var(--muted);line-height:1.6">
          Toronto, ON • Open to internships • Frontend + Full-Stack
        </p>

        <div class="tags" style="margin-top:14px">
          <span>UI</span><span>Animations</span><span>React</span><span>Node</span>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
