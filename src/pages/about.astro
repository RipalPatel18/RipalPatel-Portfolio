---
import BaseLayout from "../layouts/BaseLayout.astro";
import GlowBackground from "../components/GlowBackground.astro";
import ScrollProgress from "../components/ScrollProgress.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Reveal from "../components/Reveal.astro";
import PageHeader from "../components/PageHeader.astro";
---

<BaseLayout title="About | Ripal Patel" description="About Ripal Patel.">
  <div class="page page-enter">
    <GlowBackground />
    <ScrollProgress />
    <Navbar />

    <PageHeader title="About" subtitle="Web Development student focused on frontend and UI design." />

    <main class="section" style="padding-top:0">
      <div class="container">
        <Reveal delay={0}>
          <div class="card tilt gradient" data-tilt>
            <div class="card-body">
              <p class="card-text" style="margin-bottom:12px;">
                I’m <strong style="color:var(--text)">Ripal Patel</strong>. I build clean, responsive websites and
                create modern UI/graphic designs.
              </p>
              <p class="card-text" style="margin-bottom:12px;">
                Tools: HTML, CSS, JavaScript, React/Astro, GitHub • Figma + Adobe for design.
              </p>
              <div class="tags">
                <span class="tag">Frontend</span><span class="tag">UI Design</span><span class="tag">Branding</span><span class="tag">Figma</span>
              </div>
            </div>
          </div>
        </Reveal>
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>
