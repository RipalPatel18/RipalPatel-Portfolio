---
import BaseLayout from "../layouts/BaseLayout.astro";
import GlowBackground from "../components/GlowBackground.astro";
import ScrollProgress from "../components/ScrollProgress.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Reveal from "../components/Reveal.astro";
import PageHeader from "../components/PageHeader.astro";
---

<BaseLayout title="Projects | Ripal Patel" description="Development projects by Ripal Patel.">
  <div class="page page-enter">
    <GlowBackground />
    <ScrollProgress />
    <Navbar />

    <PageHeader title="Projects" subtitle="Case-study style cards with tech tags and links." />

    <main class="section" style="padding-top:0">
      <div class="container">
        <Reveal delay={0}>
          <div class="card tilt featured gradient" data-tilt>
            <img class="thumb" src="/projects/fridgechef.jpg" alt="FridgeChef screenshot" />
            <div class="card-body">
              <h2 class="card-title" style="font-size:1.35rem;">FridgeChef</h2>
              <p class="card-text">
                Smart recipe finder that suggests meals based on ingredients. Clean UI + API integration.
              </p>
              <div class="tags">
                <span class="tag">Node.js</span><span class="tag">Express</span><span class="tag">API</span><span class="tag">UI</span>
              </div>
              <div class="cta">
                <a class="btn btn-primary" href="#" target="_blank">Live Demo</a>
                <a class="btn btn-ghost" href="#" target="_blank">GitHub</a>
              </div>
            </div>
          </div>
        </Reveal>

        <div class="grid grid-2" style="margin-top:18px;">
          <Reveal delay={0}>
            <div class="card tilt" data-tilt>
              <img class="thumb" src="/projects/puzzlepop.jpg" alt="PuzzlePop screenshot" />
              <div class="card-body">
                <h3 class="card-title">PuzzlePop</h3>
                <p class="card-text">Interactive puzzle UI built with HTML/CSS/JS.</p>
                <div class="tags">
                  <span class="tag">HTML</span><span class="tag">CSS</span><span class="tag">JavaScript</span>
                </div>
                <div class="cta">
                  <a class="btn btn-primary" href="#" target="_blank">Live</a>
                  <a class="btn btn-ghost" href="#" target="_blank">GitHub</a>
                </div>
              </div>
            </div>
          </Reveal>

          <Reveal delay={140}>
            <div class="card tilt" data-tilt>
              <img class="thumb" src="/projects/fridgechef.jpg" alt="Project screenshot" />
              <div class="card-body">
                <h3 class="card-title">Another Project</h3>
                <p class="card-text">Replace with your real project and links.</p>
                <div class="tags">
                  <span class="tag">Tech 1</span><span class="tag">Tech 2</span><span class="tag">Tech 3</span>
                </div>
                <div class="cta">
                  <a class="btn btn-primary" href="#" target="_blank">Live</a>
                  <a class="btn btn-ghost" href="#" target="_blank">GitHub</a>
                </div>
              </div>
            </div>
          </Reveal>
        </div>
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>
