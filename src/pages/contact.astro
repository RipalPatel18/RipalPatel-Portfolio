---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Ripal | Contact">
  <section class="section section-lg">
    <div class="container" data-reveal>
      <h2 class="section-title">Contact</h2>
      <p class="section-sub">Let’s connect for internships, freelance, or collaborations.</p>

      <div class="contact-grid">
        <div class="card glass" data-tilt>
          <h3 style="margin:0 0 8px">Email</h3>
          <p style="margin:0;color:var(--muted)">patelripalca@gmail.com</p>
          <div style="margin-top:14px">
            <a class="btn btn-sm" href="mailto:patelripalca@gmail.com">Send Email</a>
          </div>
        </div>

        <form class="card glass form" onsubmit="event.preventDefault(); alert('Student demo ✅')">
          <div class="field">
            <label>Name</label>
            <input placeholder="Your name" required />
          </div>
          <div class="field">
            <label>Email</label>
            <input type="email" placeholder="you@email.com" required />
          </div>
          <div class="field">
            <label>Message</label>
            <textarea placeholder="Write your message..." required></textarea>
          </div>
          <button class="btn" type="submit">Send</button>
        </form>
      </div>
    </div>
  </section>
</BaseLayout>
