---
import BaseLayout from "../layouts/BaseLayout.astro";
import GlowBackground from "../components/GlowBackground.astro";
import ScrollProgress from "../components/ScrollProgress.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Reveal from "../components/Reveal.astro";
import PageHeader from "../components/PageHeader.astro";
---

<BaseLayout title="Contact | Ripal Patel" description="Contact Ripal Patel.">
  <div class="page page-enter">
    <GlowBackground />
    <ScrollProgress />
    <Navbar />

    <PageHeader title="Contact" subtitle="Want to collaborate? Reach out anytime." />

    <main class="section" style="padding-top:0">
      <div class="container grid grid-2">
        <Reveal delay={0}>
          <div class="card tilt" data-tilt>
            <div class="card-body">
              <h3 class="card-title">Reach me</h3>
              <p class="card-text">Replace placeholders with your real links.</p>

              <p class="card-text"><strong>Email:</strong> <a style="color:var(--accent)" href="mailto:your-email@example.com">your-email@example.com</a></p>
              <p class="card-text"><strong>GitHub:</strong> <a style="color:var(--accent)" href="https://github.com/RipalPatel18" target="_blank">github.com/RipalPatel18</a></p>
              <p class="card-text"><strong>LinkedIn:</strong> <a style="color:var(--accent)" href="#" target="_blank">Add LinkedIn link</a></p>
            </div>
          </div>
        </Reveal>

        <Reveal delay={140}>
          <div class="card tilt gradient" data-tilt>
            <div class="card-body">
              <h3 class="card-title">Quick Actions</h3>
              <p class="card-text">Fast buttons for recruiters/clients.</p>
              <div class="cta">
                <a class="btn btn-primary" href="mailto:your-email@example.com">Email Me</a>
                <a class="btn btn-ghost" href="#" target="_blank">Connect on LinkedIn</a>
              </div>
            </div>
          </div>
        </Reveal>
      </div>
    </main>

    <Footer />
  </div>
</BaseLayout>
